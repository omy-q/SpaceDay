<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/main_content_text_input_layout_hint</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="hintTextColor">@color/hint_text</item>
        <item name="helperText">@string/main_content_text_input_layout_helper_text</item>
        <item name="helperTextTextColor">@color/helper_text</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">10</item>
        <item name="counterTextColor">@color/counter</item>
        <item name="counterTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="counterOverflowTextColor">@color/counter_overflow</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="endIconTint">@color/hint_text</item>
        <item name="endIconMode">custom</item>
        <item name="boxStrokeColor">@color/hint_text</item>

    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ChipTextAppearance.Base" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">?attr/font</item>
        <item name="android:fontFamily">?attr/font</item>
    </style>
</resources>