<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceDay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
    </style>

    <style name="Theme.SpaceDay.Regular">
        <item name="font">@font/roboto_mono_regular</item>
        <item name="bottom_sheet_layout_background">@color/light_purple</item>
        <item name="bottom_sheet_line_background">@color/purple_500</item>
        <item name="bottom_sheet_text_description_header">@color/purple_700</item>
        <item name="bottom_sheet_text_description">@color/purple_700</item>
    </style>

    <style name="Theme.SpaceDay.BottomSheet">
        <item name="font">@font/bebas_neue_regular</item>
        <item name="bottom_sheet_layout_background">@color/light_mint</item>
        <item name="bottom_sheet_line_background">@color/dark_mint</item>
        <item name="bottom_sheet_text_description_header">@color/mint</item>
        <item name="bottom_sheet_text_description">@color/mint</item>
    </style>

    <style name="Theme.SpaceDay.Space">
        <item name="font">@font/indie_flower_regular</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/dark_main</item>
        <item name="colorOnPrimary">@color/light_main</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondary</item>
        <item name="bottom_sheet_layout_background">@color/light_main</item>
        <item name="bottom_sheet_line_background">@color/dark_main</item>
        <item name="bottom_sheet_text_description_header">@color/main</item>
        <item name="bottom_sheet_text_description">@color/main</item>

    </style>
    <style name="Theme.SpaceDay.TextFont">
        <item name="font">@font/monte_carlo_regular</item>
    </style>
</resources>